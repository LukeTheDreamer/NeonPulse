# Stripe
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Price IDs (either for store items or tiers)
STRIPE_PRICE_CREDITS_5000=price_...
STRIPE_PRICE_GOLDEN_SKIN=price_...
STRIPE_PRICE_SUPPORTER_BADGE=price_...
TIER_1_PRICE_ID=price_...
TIER_2_PRICE_ID=price_...
TIER_3_PRICE_ID=price_...

# Database
# Netlify DB / Neon
# Netlify sets NETLIFY_DATABASE_URL automatically when Netlify DB is enabled.
# For local development without Netlify Dev, DATABASE_URL is supported as a fallback.
NETLIFY_DATABASE_URL=postgres://user:pass@localhost:5432/neonpulse
DATABASE_URL=postgres://user:pass@localhost:5432/neonpulse

# Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=YOUR_CLIENT_ID
AUTH0_AUDIENCE=YOUR_API_AUDIENCE

# General
URL=https://your-site.example.com
MIN_DONATION=5
INIT_DB_TOKEN=some-secure-init-token
